1. You are given a string exp representing an expression.
2. You are required to check if the expression is balanced i.e. closing brackets and opening brackets match up well.

e.g.
[(a + b) + {(c + d) * (e / f)}] -> true
[(a + b) + {(c + d) * (e / f)]} -> false
[(a + b) + {(c + d) * (e / f)} -> false
([(a + b) + {(c + d) * (e / f)}] -> false

#include <iostream>
#include <stack>
using namespace std;

bool balancedBrackets(string str){
    stack<char> st;

    for(int i=0;i<str.size();i++){
        if(str[i] == '(' || str[i] == '{' || str[i] == '['){
            st.push(str[i]);
        }else if(str[i] == ')') {
            if(st.empty() || st.top() != '('){
                return false;
            }else{
                st.pop();
            }
        }else if(str[i] == '}'){
            if(st.empty() || st.top()!='{'){
                return false;
            }else{
                //cout<<st.top();
                st.pop();
            }
        }else if(str[i] == ']'){
            if(st.empty() || st.top()!='['){
                return false;
            }else{
                st.pop();
            }
        }
    }
    return st.empty(); //true 1 and false 0
}
int main() {
    string str;
    cin>>str;

    if(balancedBrackets(str)){
        cout<<"false";
    }else{
        cout<<"true";
    }
    return 0;
}
